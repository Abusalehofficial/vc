{% include 'header.twig' %}

<div class="container-fluid px-3 px-lg-5 py-5" style="max-width:480px;margin:auto">
  <div class="card border-0 shadow-sm">
    <div class="card-body p-4">
      <h5 class="mb-4 text-center">
        <i class="fas fa-lock"></i> Reset Password
      </h5>

      {% if errorText %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          {{ errorText }}
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      {% endif %}
      {% if successText %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          {{ successText }}
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      {% endif %}

      <form method="post" action="">
        <div class="mb-3">
          <label class="form-label">{{ lang['resetpassword.user'] }}</label>
          <input type="text" name="user" class="form-control" value="{{ data.user|default('') }}" placeholder="Enter Your Email" required>
        </div>

        {% if captcha %}
        <div class="mb-3">
          <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
        </div>
        {% endif %}

        <input type="hidden" name="crsf_token" value="{{ csrf_token() }}">
        <button type="submit" class="btn btn-primary w-100">{{ lang['resetpassword.button'] }}</button>
      </form>

      <div class="text-center mt-3">
        <small>Remember password? <a href="/" class="text-decoration-none">Sign in</a></small>
      </div>
    </div>
  </div>
</div>

{% include 'footer.twig' %}