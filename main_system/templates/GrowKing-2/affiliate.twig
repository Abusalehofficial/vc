<script>
let earningsOffset = 0;
let referralsOffset = 0;
let withdrawalsOffset = 0;

document.addEventListener('DOMContentLoaded', () => {
  loadStats();
  loadEarnings();
});

function loadStats() {
  fetch('/affiliate', {
    method: 'POST',
    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
    body: 'action=get_stats'
  })
  .then(r => r.json())
  .then(d => {
    if (d.status) {
      document.getElementById('stat-clicks').textContent = Number(d.data.stats.total_clicks || 0).toLocaleString();
      document.getElementById('stat-signups').textContent = Number(d.data.stats.total_signups || 0).toLocaleString();
      document.getElementById('stat-orders').textContent = Number(d.data.stats.total_orders || 0).toLocaleString();
      document.getElementById('stat-balance').textContent = '$' + parseFloat(d.data.stats.available_balance || 0).toFixed(2);
      document.getElementById('ref-link').value = d.data.ref_link;
    }
  })
  .catch(e => {
    console.error('Stats error:', e);
    toastr.error('Failed to load statistics');
  });
}

function loadEarnings() {
  fetch('/affiliate', {
    method: 'POST',
    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
    body: `action=get_earnings&offset=${earningsOffset}`
  })
  .then(r => r.json())
  .then(d => {
    if (d.status) {
      const tbody = document.getElementById('earnings-tbody');
      if (earningsOffset === 0) tbody.innerHTML = '';
      
      if (d.data.rows.length === 0 && earningsOffset === 0) {
        tbody.innerHTML = `
          <tr>
            <td colspan="5">
              <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <div>No earnings yet. Start sharing your referral link!</div>
              </div>
            </td>
          </tr>`;
        return;
      }
      
      d.data.rows.forEach(row => {
        const date = new Date(row.created_at);
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td><span class="d-none d-sm-inline">${date.toLocaleDateString('en-GB')}</span><span class="d-sm-none">${date.toLocaleDateString('en-GB', {day:'2-digit', month:'short'})}</span></td>
          <td>${row.ref_username || 'N/A'}</td>
          <td>$${parseFloat(row.order_amount).toFixed(2)}</td>
          <td class="text-success fw-bold">$${parseFloat(row.commission_amount).toFixed(2)}</td>
          <td><span class="badge-success">Credited</span></td>
        `;
        tbody.appendChild(tr);
      });
      
      document.getElementById('load-more-earnings').style.display = d.data.next_offset ? 'inline-block' : 'none';
      earningsOffset = d.data.next_offset || earningsOffset;
    }
  })
  .catch(e => {
    console.error('Earnings error:', e);
    toastr.error('Failed to load earnings history');
  });
}

function loadReferrals() {
  fetch('/affiliate', {
    method: 'POST',
    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
    body: `action=get_referrals&offset=${referralsOffset}`
  })
  .then(r => r.json())
  .then(d => {
    if (d.status) {
      const tbody = document.getElementById('referrals-tbody');
      if (referralsOffset === 0) tbody.innerHTML = '';
      
      if (d.data.rows.length === 0 && referralsOffset === 0) {
        tbody.innerHTML = `
          <tr>
            <td colspan="5">
              <div class="empty-state">
                <i class="fas fa-user-friends"></i>
                <div>No referrals yet. Share your link to get started!</div>
              </div>
            </td>
          </tr>`;
        return;
      }
      
      d.data.rows.forEach(row => {
        const date = new Date(row.register_date);
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td><strong>${row.username}</strong></td>
          <td class="d-none d-md-table-cell">${row.email}</td>
          <td>${date.toLocaleDateString('en-GB', {day:'2-digit', month:'short', year:'2-digit'})}</td>
          <td><span class="badge-success">${row.order_count}</span></td>
          <td class="fw-bold">$${parseFloat(row.total_spent).toFixed(2)}</td>
        `;
        tbody.appendChild(tr);
      });
      
      document.getElementById('load-more-referrals').style.display = d.data.next_offset ? 'inline-block' : 'none';
      referralsOffset = d.data.next_offset || referralsOffset;
    }
  })
  .catch(e => {
    console.error('Referrals error:', e);
    toastr.error('Failed to load referrals');
  });
}

function loadWithdrawals() {
  fetch('/affiliate', {
    method: 'POST',
    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
    body: `action=get_withdrawals&offset=${withdrawalsOffset}`
  })
  .then(r => r.json())
  .then(d => {
    if (d.status) {
      const tbody = document.getElementById('withdrawals-tbody');
      if (withdrawalsOffset === 0) tbody.innerHTML = '';
      
      if (d.data.rows.length === 0 && withdrawalsOffset === 0) {
        tbody.innerHTML = `
          <tr>
            <td colspan="5">
              <div class="empty-state">
                <i class="fas fa-receipt"></i>
                <div>No withdrawal history yet.</div>
              </div>
            </td>
          </tr>`;
        return;
      }
      
      d.data.rows.forEach(row => {
        const date = new Date(row.created_at);
        const processedDate = row.processed_at ? new Date(row.processed_at).toLocaleDateString('en-GB', {day:'2-digit', month:'short', year:'2-digit'}) : '-';
        
        let statusBadge = '';
        if (row.status === 'approved') {
          statusBadge = '<span class="badge-success">Approved</span>';
        } else if (row.status === 'pending') {
          statusBadge = '<span class="badge-pending">Pending</span>';
        } else if (row.status === 'rejected') {
          statusBadge = '<span class="badge-rejected">Rejected</span>';
        }
        
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${date.toLocaleDateString('en-GB', {day:'2-digit', month:'short', year:'2-digit'})}</td>
          <td class="fw-bold">$${parseFloat(row.amount).toFixed(2)}</td>
          <td>${statusBadge}</td>
          <td>${processedDate}</td>
          <td class="d-none d-lg-table-cell">${row.notes || '-'}</td>
        `;
        tbody.appendChild(tr);
      });
      
      document.getElementById('load-more-withdrawals').style.display = d.data.next_offset ? 'inline-block' : 'none';
      withdrawalsOffset = d.data.next_offset || withdrawalsOffset;
    }
  })
  .catch(e => {
    console.error('Withdrawals error:', e);
    toastr.error('Failed to load withdrawal history');
  });
}

document.querySelectorAll('[data-bs-toggle="tab"]').forEach(tab => {
  tab.addEventListener('shown.bs.tab', e => {
    const href = e.target.getAttribute('href');
    if (href === '#referrals-tab' && referralsOffset === 0) {
      loadReferrals();
    } else if (href === '#withdrawals-tab' && withdrawalsOffset === 0) {
      loadWithdrawals();
    }
  });
});

document.getElementById('load-more-earnings').addEventListener('click', loadEarnings);
document.getElementById('load-more-referrals').addEventListener('click', loadReferrals);
document.getElementById('load-more-withdrawals').addEventListener('click', loadWithdrawals);

function copyRefLink() {
  const input = document.getElementById('ref-link');
  input.select();
  input.setSelectionRange(0, 99999); // Mobile support
  
  try {
    document.execCommand('copy');
    const btn = event.target.closest('.btn-copy');
    const originalText = btn.innerHTML;
    btn.innerHTML = '<i class="fas fa-check me-1"></i>Copied!';
    btn.style.background = 'linear-gradient(135deg, #10b981 0%, #059669 100%)';
    
    setTimeout(() => {
      btn.innerHTML = originalText;
      btn.style.background = '';
    }, 2000);
  } catch (err) {
    alert('Failed to copy. Please copy manually.');
  }
}



// ✅ FIXED FUNCTION
function requestWithdrawal() {
  const amount = parseFloat(document.getElementById('withdraw-amount').value);
  
  if (!amount || amount < 10) {
    Swal.fire({
      icon: 'warning',
      title: 'Invalid Amount',
      text: 'Minimum withdrawal is $10',
      confirmButtonColor: '#667eea'
    });
    return;
  }
  
  Swal.fire({
    title: 'Confirm Withdrawal',
    html: `Request withdrawal of <strong>$${amount.toFixed(2)}</strong>?<br><small>Amount will be added to your main balance instantly.</small>`,
    icon: 'question',
    showCancelButton: true,
    confirmButtonColor: '#10b981',
    cancelButtonColor: '#6b7280',
    confirmButtonText: 'Yes, Withdraw',
    cancelButtonText: 'Cancel'
  }).then((result) => {
    if (result.isConfirmed) {
      // ✅ FIX: Use querySelector instead of event.target
      const btn = document.querySelector('.btn-withdraw');
      
      if (!btn) {
        toastr.error('Button not found');
        return;
      }
      
      btn.disabled = true;
      btn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Processing...';
      
      fetch('/affiliate', {
        method: 'POST',
        headers: {'Content-Type': 'application/x-www-form-urlencoded'},
        body: `action=request_withdrawal&amount=${amount}`
      })
      .then(r => r.json())
      .then(d => {
        if (d.status) {
          Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: d.message,
            confirmButtonColor: '#10b981'
          });
          document.getElementById('withdraw-amount').value = '';
          loadStats();
          withdrawalsOffset = 0;
          loadWithdrawals();
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Withdrawal Failed',
            text: d.message,
            confirmButtonColor: '#ef4444'
          });
        }
      })
      .catch(e => {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Request failed. Please try again.',
          confirmButtonColor: '#ef4444'
        });
      })
      .finally(() => {
        btn.disabled = false;
        btn.innerHTML = '<i class="fas fa-paper-plane me-1"></i>Request';
      });
    }
  });
}
</script>

